<%= stylesheet_link_tag "application", media: "all" %>
<%= javascript_include_tag "application" %>
<%= render "layouts/style" %>

<%= link_to "Logout", logout_path %>

<h1 class="section-title big-text scrollimation fade-up in"><%= @user.name %>'s Music Profile</h1>

<% Artist.order("count DESC").limit(25).each do |artist| %>
  <div class="circle" style="height:<%= artist.size %>px; width:<%= artist.size %>px;"><p class="circle-p"><%= artist.name %></p></div>
<% end %>